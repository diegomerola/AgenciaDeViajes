extends ./layouts/index

block slider
    div(class="slider")
        h1 Rio de Janeiro
        em Aventura

block contenido
    main(class="container mt-5")
        h2(class="text-center mb-5") | Sobre Nosotros
        div(class="row mb-5")
            div(class="col-md-6")
                p Vivamus eget elit quis sem tempus vestibulum. Pellentesque facilisis ac arcu id tempor. Phasellus at bibendum ex. Etiam scelerisque mollis sem eu euismod. Sed ligula dui, dictum vel feugiat et, lobortis ut dui. Aliquam erat volutpat. Vivamus porta, ex nec molestie euismod, ex nunc tincidunt lacus, ut tempor magna odio sit amet dolor. 
                p Aliquam erat volutpat. Vivamus porta, ex nec molestie euismod, ex nunc tincidunt lacus, ut tempor magna odio sit amet dolor. Donec purus ligula, vulputate quis convallis eget, dignissim nec felis. Nam vitae bibendum mi, at vestibulum metus. Aenean a interdum arcu.
            div(class="col-md-6")
                img(src="/img/inicio_nosotros.jpg" alt="Imagen nosotros" class="img-fluid")
        div(class="row proximos-viajes")    
            each viaje in viajes
                div(class="col-md-6 col-lg-4 mb-4")
                    div(class="card")
                        img(src=`./img/destinos_${viaje.imagen}.jpg`, alt="" class="card-img-top")
                        div(class="card-body")
                            h2= viaje.titulo
                            p   
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-calendar-event" width="40" height="40" viewBox="0 0 24 24" stroke-width="1.5" stroke="#dc135f" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                    <rect x="4" y="5" width="16" height="16" rx="2" />
                                    <line x1="16" y1="3" x2="16" y2="7" />
                                    <line x1="8" y1="3" x2="8" y2="7" />
                                    <line x1="4" y1="11" x2="20" y2="11" />
                                    <rect x="8" y="15" width="2" height="2" />
                                    </svg>
                                | #{`${viaje.fecha_ida}`} - #{`${viaje.fecha_vuelta}`}
                            p
                                svg.icon.icon-tabler.icon-tabler-users(xmlns='http://www.w3.org/2000/svg' width='40' height='40' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                    path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                    circle(cx='9' cy='7' r='4')
                                    path(d='M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')
                                    path(d='M16 3.13a4 4 0 0 1 0 7.75')
                                    path(d='M21 21v-2a4 4 0 0 0 -3 -3.85')
                                | #{`${viaje.disponibles}`} Disponibles
                            p= viaje.descripcion.substr(0,100) + '...'
                            a(href=`viajes/${viaje.slug}` class="btn btn-block btn-success") Mas informacion
    div(class="descuento")
        div(class="container")
            div(class="row")
                div(class="col-md-6")
                    div(class="contenido")
                        h3 5% de Descuento
                        p(class="titulo") Viaje a Canada
                        p(class="fecha") 20 de Marzo de 2022 - 28 de Marzo de 2022
                        p(class="precio") 2500 USD
    div(class="container")
        h3(class="mt-5 text-center") Testimoniales
        blockquote(class="text-center") Lee sobre nuestros clientes y sus experiencias
        div(class="row testimoniales")
            each testimonial in testimoniales
                div(class="col-md-6 col-lg-4 mb-4")
                    div(class="card")
                        div(class="card-body")
                            blockquote(class="blockquote")
                            p(class="mb-0")
                                | #{`${testimonial.mensaje}`}
                            footer(class="blockquote-footer")
                                | #{`${testimonial.nombre}`}